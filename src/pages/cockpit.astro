<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex" />
    <!-- Decap reads this config from /public -->
    <link href="/cockpit/config.yml" type="text/yaml" rel="cms-config-url" />
    <title>Arcanex Cockpit</title>
  </head>
  <body>
    <!-- Netlify Identity widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      if (window.netlifyIdentity) {
        const hasInvite = (location.hash || '').includes('invite_token');
        window.netlifyIdentity.on('init', (user) => {
          if (hasInvite && !user) window.netlifyIdentity.open();
        });
        window.netlifyIdentity.on('login', () => location.reload());
        window.netlifyIdentity.init(); // Don't forget to initialize!
      }
    </script>

    <!-- Decap CMS -->
    <script src="https://unpkg.com/decap-cms-app@3.8.3/dist/decap-cms-app.js"></script>
    <script>
      // Initialize CMS
      if (window.DecapCMS) {
        window.DecapCMS.init();
      } else if (window.CMS) {
        window.CMS.init();
      } else {
        console.error('Decap CMS not loaded properly');
      }
    </script>
  </body>
</html>