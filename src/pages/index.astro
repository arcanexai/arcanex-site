---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const home = await getEntry("pages", "home");
const { Content } = await home.render();
const { title, lead, hero } = home.data;
---
<Layout title={title}>
  <section class="mx-auto max-w-4xl py-12 text-center">
    {hero && (
      <img
        src={hero}
        alt={title}
        class="mx-auto mb-8 w-full max-h-[480px] rounded-2xl object-cover shadow"
        loading="eager"
      />
    )}

    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      {title}
    </h1>

    {lead && (
      <p class="mt-4 text-lg text-gray-600">
        {lead}
      </p>
    )}

    <div class="prose mx-auto mt-8 text-left">
      <Content />
    </div>
  </section>
</Layout>