---
import Layout from "../layouts/Layout.astro";

// KÖZVETLEN import a markdownról (nincs getEntry)
import HomeDoc from "../content/pages/home.md";

const { title, lead, hero } = HomeDoc.frontmatter;
---
<Layout title={title}>
  <section class="mx-auto max-w-4xl py-12 text-center">
    {hero && (
      <img
        src={hero}
        alt={title}
        class="mx-auto mb-8 w-full max-h-[480px] rounded-2xl object-cover shadow"
        loading="eager"
      />
    )}

    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      {title}
    </h1>

    {lead && (
      <p class="mt-4 text-lg text-gray-600">
        {lead}
      </p>
    )}

    <div class="prose mx-auto mt-8 text-left">
      <HomeDoc.Content />
    </div>
  </section>
</Layout>